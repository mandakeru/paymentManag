<%= simple_form_for @payment, :html => { :class => "form-horizontal payment" } do |f| %>

  <% if @payment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-lg-2" for="payment_title">Título</label>
    <div class="col-lg-10">
      <%= f.input :title, label: false, input_html: { class:  'form-control' } %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2" for="payment_description">Descrição</label>
    <div class="col-lg-10">
      <%= f.input :description, label: false, input_html: { class: 'form-control' } %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2" for="payment_value">Valor</label>
    <div class="col-lg-10">
      <%= f.input :value, label: false, input_html: { class: 'form-control' } %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <!-- user_id will be hidden -->
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
  
  <div class="form-group">
    <label class="control-label col-lg-2" for="payment_title">Status</label>
    <div class="col-lg-10">
      <%= f.input :status, label: false, as: :radio_buttons %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  
  <div class="form-group" id="a-vencer">
    <label class="control-label col-lg-2" for="payment_title">Data de vencimento</label>
    <div class="col-lg-10">
      <%= f.input :pay_date, label: false, input_html: { class: 'form-control' } %>
    </div>
    <%=f.error_span(:pay_date) %>
  </div>
  
 
    
  <div class="form-group">
    <label class="control-label col-lg-2" for="payment_title">Vezes a pagar</label>
    <div class="col-lg-10">
      <%= f.input :times_to_pay, label: false, input_html: { class: 'form-control' } %>
    </div>
    <%=f.error_span(:times_to_pay) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.button :submit, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
